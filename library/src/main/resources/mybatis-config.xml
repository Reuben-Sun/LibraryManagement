<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="org.h2.Driver"/>
                <property name="url" value="jdbc:h2:./LibraryDB;MV_STORE=false"/>
                <property name="username" value="manager"/>
                <property name="password" value="123456"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/reuben/library/mapper/BookMapper.xml"/>
        <mapper resource="com/reuben/library/mapper/PersonMapper.xml"/>
        <mapper resource="com/reuben/library/mapper/BlogMapper.xml"/>
    </mappers>
</configuration>